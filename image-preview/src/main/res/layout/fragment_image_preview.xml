<?xml version="1.0" encoding="utf-8"?>
<com.ky.android.photo.widget.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dragLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ImagePreviewFragment">


    <com.ky.android.photo.widget.DragFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ky.android.photo.widget.photoview.PhotoView
            android:id="@+id/photo_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />

    </com.ky.android.photo.widget.DragFrameLayout>

</com.ky.android.photo.widget.DragLayout>